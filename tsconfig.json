{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "NodeNext",
		"lib": ["ES2020"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"outDir": "lib",

		/* Bundler mode */

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"ts-node": {
		"esm": true
	},
}
